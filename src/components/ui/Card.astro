---
// src/components/ui/Card.astro

interface Props {
	title: string;
	class?: string;
}

const { title, class: className = '' }: Props = Astro.props;
---

<article
	class={`rounded-xl border p-4 shadow-sm transition-transform hover:scale-101 ${className}`}
>
	{title && <h3 class="mb-2 font-medium" set:html={title} />}
	<div>
		<slot />
	</div>
</article>
